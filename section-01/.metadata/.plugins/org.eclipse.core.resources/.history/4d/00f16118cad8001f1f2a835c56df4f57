package com.mayuktha.security.config;

import org.slf4j.Logger;
import org.slf4j.LoggerFactory;
import org.springframework.context.annotation.Bean;
import org.springframework.context.annotation.Configuration;
import org.springframework.security.config.annotation.web.builders.HttpSecurity;
import org.springframework.security.web.SecurityFilterChain;

import com.mayuktha.controller.UserRegistrationController;

@Configuration
public class SecurityConfig {
	
	private static final Logger log = LoggerFactory.getLogger(SecurityConfig.class);

    @Bean
    SecurityFilterChain configure(HttpSecurity security) throws Exception {
    	
    	log.debug("SecurityConfig:::::::");
		
		security.authorizeHttpRequests((auth)->auth.anyRequest().permitAll());
		security.cors(cors->cors.disable());
		security.formLogin(form->form.disable());
		security.httpBasic(htba->htba.disable());
		return security.build();
	}
	

}
